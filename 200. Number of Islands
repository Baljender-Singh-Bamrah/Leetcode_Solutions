class Solution {
public:
    vector<vector<int>> vec = {{0,-1},{-1,0},{0,1},{1,0}};

    void solve(vector<vector<char>>& grid, int i, int j) {
        if(i<0 || i>=grid.size() || j<0 || j>=grid.size() || grid[i][j]=='0')
            return ;
        
        grid[i][j] = '0';

        for(auto &it : vec) {
            int i_ = i + it[0];
            int j_ = j + it[1];

            solve(grid, i_, j_);
        }
    }

    int numIslands(vector<vector<char>>& grid) {
        int m = grid.size();
        int n = grid[0].size();
        int result = 0;

        for(int i=0;i<m;i++) {
            for(int j=0;j<n;j++) {
                if(grid[i][j] == '1') {
                    solve(grid, i, j);
                    result++;
                }
            }
        }

        return result;
    }
};
