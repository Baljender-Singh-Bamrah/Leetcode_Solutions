class Solution {
    int dfs(TreeNode *root, int &ans) {
        if(!root) return 0;

        int l = dfs(root->left, ans);
        int r = dfs(root->right, ans);
        ans += abs(l)+ abs(r);
        return (root->val-1)+l+r;
    }
public:
    int distributeCoins(TreeNode* root) {
        int ans = 0;
        dfs(root, ans);
        return ans;
    }
};
