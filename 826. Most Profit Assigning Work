class Solution {
public:
    int maxProfitAssignment(vector<int>& difficulty, vector<int>& profit, vector<int>& worker) {
        int sum=0;
        for(int i=0 ; i<worker.size() ; i++)
        {
            int maxi=0;
            int m=i;
            bool flag=false;
            for(int j=0 ; j<difficulty.size() ; j++)
            {
                if(difficulty[j]<=worker[i])
                {
                    if(profit[j]>=maxi)
                    {
                        m=j;

                        maxi=profit[j];
                        flag=true;
                    }
                }
            }
            if(flag)
                sum+=profit[m];
        }
        return sum;
    }
};
