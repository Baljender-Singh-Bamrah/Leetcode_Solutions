class Solution {
public:
    int numberOfBeams(vector<string>& bank) {
        int sum = 0, x = 0;

        for(auto &it: bank) {
            int cnt = count(it.begin(), it.end(), '1');
            if(x==0 && cnt != 0) {
                x = cnt;
                continue;
            }
            else if(cnt == 0) continue;

            sum += x*cnt;
            x = cnt;
        }

        return sum;
    }
};
