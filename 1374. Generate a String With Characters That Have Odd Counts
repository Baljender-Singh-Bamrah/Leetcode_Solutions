class Solution {
public:
    string generateTheString(int n) {
        if (n % 2 != 0) {
            string ans = "";
            while (n--) {
                ans += 'a';
            }
            return ans;
        }
        if (n == 2)
            return "ab";
        int a = n / 2 + 1;
        int b = n - a;
        string ans = "";
        while (n--) {
            if (a--) {
                ans += 'a';
            }

            else{
                ans += 'b';
            }
        }
        return ans;
    }
};
