class Solution {
public:
    string generateTheString(int n) {
        if(n%2!=0)
        {
            string ans="";
            while(n--)
            {
                ans+='a';
            }
            return ans;
        }

        int a=n/2;
        if(a%2==0)
            a++;
        int b=n-a;
        int c=0;
        if(b%2==0)
        {
             b--;
             c=1;
        }   
        string ans="";
        while(n--)
        {
            if(a--)
            {
                ans+='a';
            }

            else if(b--)
            {
                ans+='b';
            }

            else{
                ans+='c';
            }
        }
        return ans;
    }
};
