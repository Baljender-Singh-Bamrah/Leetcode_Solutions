class Solution {
public:
    vector<int> distributeCandies(int candies, int num_people) {
        vector<int> result(num_people, 0);
        int give = 1;
        int idx = 0;
        
        while (candies > 0) {
            result[idx % num_people] += min(give, candies);
            candies -= give;
            give++;
            idx++;
        }
        
        return result;
    }
};
