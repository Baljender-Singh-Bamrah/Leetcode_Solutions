class Solution {
public:
    int smallestNumber(int n) {
        if(n==1) return 1;

        int x=1;
        while(n>=x) {
            x = x<<1;
        }

        return x-1;
    }
};

----------------------------------------------------

class Solution {
public:
    int smallestNumber(int n) {
        return (1 << (32 - __builtin_clz(n))) - 1;
    }
};
